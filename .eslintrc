{
	"env": {
		"es6": true,
		"node": true
	},
	"rules": {

		// Error prevention
		"comma-dangle": [1, "always-multiline"], // Makes for clearer git merges
		"no-cond-assign": 2,
		"no-constant-condition": 2,
		"no-dupe-keys": 2,
		"no-duplicate-case": 2,
		"no-empty-character-class": 2,
		"no-empty": 2,
		"no-ex-assign": 2,
		"no-extra-boolean-cast": 2,
		"no-extra-parens": 2,
		"no-extra-semi": 2,
		"no-func-assign": 2,
		"no-inner-declarations": [2, "both"],
		"no-invalid-regexp": 2,
		"no-irregular-whitespace": 2,
		"no-negated-in-lhs": 2,
		"no-obj-calls": 2,
		"no-regex-spaces": 2,
		"no-sparse-arrays": 2,
		"no-unexpected-multiline": 2,
		"no-unreachable": 2,
		"use-isnan": 2,
		"valid-typeof": 2,

		// Best practices
		"accessor-pairs": 2,
		"block-scoped-var": 2,
		"curly": 2,
		"dot-location": [2, "property"],
		"dot-notation": 2,
		"eqeqeq": 2,
		"no-alert": 2,
		"no-caller": 2,
		"no-div-regex": 2,
		"no-else-return": 2,
		"no-empty-label": 2,
		"no-empty-pattern": 2,
		"no-eval": 2,
		"no-extend-native": 2,
		"no-extra-bind": 2,
		"no-fallthrough": 2,
		"no-floating-decimal": 2,
		"no-implicit-coercion": [2, {"boolean": false, "number": true, "string": false}],
		"no-implied-eval": 2,
		"no-invalid-this": 2,
		"no-iterator": 2,
		"no-lone-blocks": 2,
		"no-loop-func": 2,
		"no-multi-spaces": 1,
		"no-multi-str": 2,
		"no-native-reassign": 2,
		"no-new-func": 2,
		"no-new-wrappers": 2,
		"no-new": 2,
		"no-octal-escape": 2,
		"no-octal": 2,
		"no-param-reassign": 2,
		"no-proto": 2,
		"no-redeclare": 2,
		"no-return-assign": 2,
		"no-self-compare": 2,
		"no-sequences": 2,
		"no-throw-literal": 2,
		"no-unused-expressions": 2,
		"no-useless-call": 2,
		"no-useless-concat": 2,
		"no-void": 2,
		"no-with": 2,
		"radix": [2, "always"],
		"wrap-iife": [2, "outside"],

		// Variables
		"no-delete-var": 2,
		"no-label-var": 2,
		"no-shadow-restricted-names": 2,
		"no-shadow": [2, { "hoist": "all" }],
		"no-undef-init": 2,
		"no-undef": 2,
		"no-unused-vars": 2,
		"no-use-before-define": [2, "nofunc"],

		// Style
		"array-bracket-spacing": [1, "never"], //[1, 2, 3]
		"block-spacing": [1, "always"], // { bar = 0; }
		"brace-style": 2,
		"camelcase": 2,
		"comma-spacing": [1, {"before": false, "after": true}],
		"comma-style": [1, "last"],
		"computed-property-spacing": [1, "never"],
		"indent": [ 1, 4, { "SwitchCase": 1 } ], // Four spaces
		"key-spacing": [1, {"beforeColon": false, "afterColon": true}],
		"lines-around-comment": [1, { "beforeBlockComment": true } ],
		"max-len": [2, 120, 4],
		"new-cap": 2,
		"new-parens": 2,
		"no-array-constructor": 2,
		"no-lonely-if": 2,
		"no-mixed-spaces-and-tabs": 1,
		"no-multiple-empty-lines": [1, {"max": 2}],
		"no-nested-ternary": 2,
		"no-new-object": 2,
		"no-restricted-syntax": 2,
		"no-spaced-func": 1,
		"no-unneeded-ternary": 2,
		"object-curly-spacing": [1, "always"],
		"one-var": [2, "never"],
		"operator-linebreak": [1, "before"],
		"quote-props": [1, "as-needed"],
		"quotes": [1, "single", "avoid-escape"],
		"semi-spacing": 1,
		"semi": [2, "always"],
		"space-after-keywords": 1,
		"space-before-blocks": 1,
		"space-before-function-paren": [1, "never"],
		"space-before-keywords": [1, "always"],
		"space-in-parens": [1, "always"],
		"space-infix-ops": 1,
		"space-return-throw-case": 1,
		"space-unary-ops": 1,
		"spaced-comment": [1, "always", { "exceptions": ["-"] }],

		// ES6
		"constructor-super": 2,
		"no-this-before-super": 2,
		"no-var": 2,
		"prefer-const": 2,
		"no-const-assign": 2,
		"no-dupe-class-members": 2,
		"prefer-arrow-callback": 2,
		"arrow-spacing": 2,
		"arrow-parens": [2, "as-needed"],
		"no-case-declarations": 2,
		"require-yield": 2,
		"generator-star-spacing": 1,

		// Node only
		"strict": [2, "global"],
		"no-new-require": 2

	}
}